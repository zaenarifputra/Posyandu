<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_indicator_active"
        android:layout_width="@dimen/size_indicator_regular"
        android:layout_height="@dimen/size_indicator_regular"
        android:background="@drawable/bg_oval_blue_indicator"
        android:orientation="vertical" />

    <View
        android:id="@+id/view_indicator_nonactive"
        android:layout_width="@dimen/size_indicator_regular"
        android:layout_height="@dimen/size_indicator_regular"
        android:background="@drawable/bg_oval_grey_indicator"
        android:orientation="vertical"
        android:visibility="gone"/>
</LinearLayout>
